#pages-home-container data-controller='home'
  .intro
    h1.intro__title
      | Rails Simple Starter
    p.intro__description
      | ((: Eat - Sleep - Code :))
    .intro__actions
      - if user_signed_in?
        - if policy(:gateway).admin_namespace?
          => link_to 'Admin Dashboard', admin_root_path, class: 'btn btn-primary'
        => link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-warning'
      - else
        => link_to 'Login', new_user_session_path, class: 'btn btn-primary'
        => link_to 'Create New Account', new_user_registration_path, class: 'btn btn-success'
